<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qfedu.dao.RoleDao">
    <resultMap id="roleMap" type="role">
        <id column="id" property="id"></id>
        <result column="info" property="info"></result>
        <result column="name" property="name"></result>
        <association property="user" resultMap="com.qfedu.dao.UserDao.userMap"></association>
        <collection property="rolelist" ofType="role">
            <id column="cid" property="id"></id>
            <result column="cinfo" property="info"></result>
            <result column="cname" property="name"></result>
        </collection>
    </resultMap>

    <!--查询所有角色信息-->
    <select id="findUserRoleAll"  resultMap="roleMap">
        select u.id,u.no,r.info from t_role r
        INNER JOIN t_userrole ur
        on ur.rid = r.id
        INNER JOIN t_user u
        on ur.uid = u.id
    </select>

    <select id="findRoleAll" resultMap="roleMap">
        select * from t_role
    </select>

</mapper>